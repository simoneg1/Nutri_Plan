@page
@model Nutri_Plan.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Logout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2>Logout</h2>
                </div>
                <div class="card-body">
                    <p>Sei sicuro di voler uscire?</p>
                    <form method="post">
                        <button type="submit" class="btn btn-primary">Sì, voglio uscire</button>
                        <a class="btn btn-secondary" href="/">No, torna indietro</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>